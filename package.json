{
  "name": "@flowlab/theme-system",
  "version": "1.0.0",
  "description": "FlowLab's comprehensive theme system for consistent UI across applications",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
